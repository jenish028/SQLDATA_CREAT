<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="#DAA68A">


    <TextView
        android:id="@+id/txt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="id"
        android:textSize="18dp" />


    <RelativeLayout
        android:id="@+id/rv_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/txt_id"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp">


        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="18dp"

            />

        <TextView
            android:id="@+id/txt_moblie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_name"
            android:text="moblie"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txt_std"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Std"
            android:layout_toEndOf="@id/txt_name"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textSize="18dp" />


    </RelativeLayout>




<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/edit_data_add"
        android:layout_width="25dp"
        android:layout_height="30dp"
        app:tint="#00FF18"
        android:src="@drawable/ic_baseline_mode_edit_24"

        />

    <ImageView
        android:id="@+id/edit_data_delet"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_below="@id/edit_data_add"
        android:src="@drawable/ic_baseline_delete_24"
        app:tint="#FF0000"

        />

</RelativeLayout>


</RelativeLayout>